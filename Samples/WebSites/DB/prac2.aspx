    <title></title>
</head>
<body>
    <form id="form1" runat="server">
    <div>
    
        <asp:SqlDataSource ID="SqlDataSource1" runat="server" ConnectionString="<%$ ConnectionStrings:GradesConnectionString %>" SelectCommand="Select 學號, 姓名, 國文+數學+英文 As 期中考總分 From 成績單"></asp:SqlDataSource>
